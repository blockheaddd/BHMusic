<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/primary_color"
    android:gravity="center_vertical"
    android:id="@+id/playlist_title_header_lin"
    android:paddingRight="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Playlist"
            android:id="@+id/playlist_title_header_title"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="# Songs"
            android:id="@+id/playlist_title_header_subtitle"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/playlist_title_shuffleButton"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_shuffle_white_24dp"
        android:transitionName="shuffleButton"
        android:tint="@color/white"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:adjustViewBounds="true"
        android:layout_margin="5dp"
        android:paddingRight="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/playlist_title_editButton"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_sort_white_24dp"
        android:tint="@color/white"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:adjustViewBounds="true"
        android:layout_margin="5dp"
        android:transitionName="editButton"
        android:paddingRight="10dp" />

</LinearLayout>